#----------------------------------------------------------------------
#                       ~~~My program~~~                           
#                       Input Parameters                             
#-----------------------------------------------------------------------
#---------------------------------------------
# Job Specification 
#---------------------------------------------
job = "VMC Simulation" 
optimizing_run = "YES" 
mode = "NEW" # ("NEW"/"APPEND")
print_level = -2 #-2
prefix="hub"
#---------------------------------------------
# Lattice:
#---------------------------------------------
lattice = "SQUARE" 
lsize1 = 10
lsize2 = 10
bc1 = "periodic"
bc2 = "antiperiodic"
bc1_twists = 1
bc2_twists = 1
#---------------------------------------------
# Model:
#---------------------------------------------
model = "HUBBARD"
t = 1.0
U = 8.0

#---------------------------------------------
# Variational wavefunction
#---------------------------------------------
wavefunction = "SC_DWAVE"
#wavefunction = "FERMISEA"
gw_projector = "YES"
dh_projector = "NO"
dhfactor1 = 0.5
gw_factor = 0.1 # 0.3037
hole_doping = 0.16;
delta_sc = 0.5 # 0.08
mu = -0.4263000
mu_default = "NO"
mu_variational = "NO"
#as_func_of = "hole_doping"
as_func_of = "delta_sc"

#---------------------------------------------
# List of observable to calculate:
#---------------------------------------------
Energy = "YES"
EnergyGradient = "YES"
Magnetization = "NO"
SC_Correlation = "NO"
SiteOccupancy = "NO"


#---------------------------------------------
# Monte Carlo parameters
#---------------------------------------------
rng_seed = 0
measure_steps = 5000
warmup_steps = 5000
min_interval = 3
max_interval = 10

#---------------------------------------------
# Optimization parameters
#---------------------------------------------
opt_progress_stdout = "YES"
opt_progress_log = "YES"
opt_num_samples = 1
opt_maxiter = 100
opt_start_tstep = 0.1
opt_refinement_cycle = 40
opt_mkseries_len = 10
opt_mkfluct_tol = 0.3
opt_gradtol = 5.0E-4


#sr_flat_tail_len = 10
#sr_rslope_tol =   0.010000
#sr_aslope_tol =   0.000010


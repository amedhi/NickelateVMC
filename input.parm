#----------------------------------------------------------------------
#                       ~~~My program~~~                           
#                       Input Parameters                             
#-----------------------------------------------------------------------
#---------------------------------------------
# Job Specification 
#---------------------------------------------
job = "VMC Simulation" 
#mpi_mode = "BC_TWIST" # "NORMAL"
optimizing_run = "NO" 
mode = "APPEND" # ("NEW"/"APPEND")
print_level = -2 #-2
prefix="hub"
#---------------------------------------------
# Lattice:
#---------------------------------------------
lattice = "SQUARE" 
lsize1 = 10
lsize2 = 10
bc1 = "periodic"
bc2 = "antiperiodic"
bc1_twists = 1
bc2_twists = 1
#---------------------------------------------
# Model:
#---------------------------------------------
model = "HUBBARD"
t = 1.0
U = 8.0

#---------------------------------------------
# Variational wavefunction
#---------------------------------------------
wavefunction = "SC_DWAVE"
#wavefunction = "FERMISEA"
gutzwiller_proj = "YES"
hole_doping = 0.16
gfactor = 0.3037
delta_sc = 0.08
mu = -0.4263000
mu_default = "NO"
mu_variational = "YES"
as_func_of = "hole_doping"
#as_func_of = "gfactor"

#---------------------------------------------
# List of observable to calculate:
#---------------------------------------------
Energy = "YES"
EnergyGradient = "YES"
Magnetization = "NO"
SC_Correlation = "NO"
SiteOccupancy = "NO"


#---------------------------------------------
# Monte Carlo parameters
#---------------------------------------------
rng_seed = 0
measure_steps = 5000
warmup_steps = 5000
min_interval = 3
max_interval = 10

#---------------------------------------------
# Optimization parameters
#---------------------------------------------
sr_progress_stdout = "YES"
sr_progress_log = "YES"
sr_random_start = "NO"
sr_opt_samples = 3
sr_max_iter = 200
sr_start_tstep = 0.06
sr_refinement_cycle = 40
sr_mkseries_len = 20
sr_mkfluct_tol = 0.2
sr_flat_tail_len = 10
sr_rslope_tol =   0.010000
sr_aslope_tol =   0.000010

